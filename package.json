{
  "name": "@xpf0000/node-window-manager",
  "version": "0.0.2",
  "description": "Manage windows in macOS, Windows and Linux",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.cjs"
  },
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "./dist/**/*",
    "./binding.gyp",
    "./lib/**/*"
  ],
  "scripts": {
    "build-gyp": "node-gyp rebuild",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --packages=external --target=node18 --format=esm --outfile=dist/index.js",
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --packages=external  --outfile=dist/index.cjs",
    "build-d.ts": "tsc src/index.ts --emitDeclarationOnly -d --outDir ./dist",
    "build": "npm run build-gyp && npm run build-esm && npm run build-cjs && npm run build-d.ts",
    "test": "node test/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpf0000/node-window-manager.git"
  },
  "keywords": [
    "window-manager",
    "native",
    "macos",
    "linux",
    "windows"
  ],
  "author": "xpf0000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpf0000/node-window-manager/issues"
  },
  "homepage": "https://github.com/xpf0000/node-window-manager#readme",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "node-gyp": "^12.1.0",
    "semantic-release": "^24.2.9",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  }
}
